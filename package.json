{
  "name": "app-management-app",
  "version": "1.1.1",
  "description": "Applications management app for DHIS2",
  "main": "index.html",
  "scripts": {
    "lint": "eslint --fix src",
    "validate": "npm ls --depth 0",
    "start": "webpack-dev-server",
    "prebuild": "rm -rf build",
    "build": "webpack --config webpack.config.prod.js",
    "postbuild": "cp -r index.html *.png i18n/ node_modules/babel-core/browser-polyfill.min.js node_modules/jquery/dist/jquery.min.js build/ && npm run manifest",
    "manifest": "d2-manifest package.json build/manifest.webapp"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dhis2/app-management-app.git"
  },
  "keywords": [
    "DHIS2",
    "HISP",
    "apps"
  ],
  "author": "Nicolay Ramm <nicolay@dhis2.org> (https://www.dhis2.org)",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/dhis2/app-management-app/issues"
  },
  "homepage": "https://github.com/dhis2/app-management-app#readme",
  "dependencies": {
    "jquery": "2.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-eslint": "^5.0.0",
    "babel-loader": "^6.0.0",
    "babel-polyfill": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-preset-react": "^6.0.0",
    "babel-preset-stage-2": "^6.0.0",
    "css-loader": "0.23.1",
    "d2": "0.0.24",
    "d2-flux": "0.5.0",
    "d2-manifest": "^1.0.0-1",
    "d2-ui": "0.0.16-0",
    "eslint": "^2.2.0",
    "eslint-config-dhis2": "^2.0.1",
    "eslint-plugin-react": "^4.1.0",
    "exports-loader": "0.6.3",
    "loglevel": "1.4.0",
    "material-ui": "0.14.4",
    "node-sass": "3.4.2",
    "precommit-hook": "3.0.0",
    "react": "0.14.7",
    "react-dom": "0.14.7",
    "react-tap-event-plugin": "0.2.2",
    "sass-loader": "3.1.2",
    "style-loader": "0.13.0",
    "susy": "2.2.12",
    "webpack": "1.12.13",
    "webpack-dev-server": "1.14.1"
  },
  "pre-commit": [
    "lint",
    "validate"
  ],
  "manifest.webapp": {
    "name": "DHIS 2 Application Management",
    "icons": {
      "48": "dhis-web-app-management.png"
    },
    "description": "The Application Management App provides the ability to upload webapps in .zip files, as well as installing apps directly from the official DHIS 2 App Store",
    "activities": {
      "dhis": {
        "href": ".."
      }
    }
  }
}
